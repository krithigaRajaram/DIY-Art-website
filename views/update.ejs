    <div>
        <img id="im" src="images/flower.jpg">
        
      <form action="update_pro" method="POST" id="up">
        <%customersList.forEach( customer=> {%>
           
            <p><span><%=customer.mail %></span></p>
            <%})%> 
            <br><br>
        <input type="password" maxlength="30" id="new_pass" name="new_pass" placeholder="Enter your new password" class="box" oninput="this.value = this.value.replace(/\s/g, '')">
        <br><br>
         <input type="password" maxlength="20" id="confirm_pass" name="confirm_pass" placeholder="Confirm your new password" class="box" oninput="this.value = this.value.replace(/\s/g, '')">
        <br><br>
         <input type="number" id="number" min="0" max="9999999999" onkeypress="if(this.value.length == 10) return false;" placeholder="Enter your number" required class="box" name="number">
         <br><br>
         <input type="submit" value="Update Now" class="btn" name="submit" >
   
      </form>
    </div>